<% provide(:title, 'Contact') %>
<div class="container">
	<%= form_tag contact_path, :class=> 'form-horizontal p-and-cg' do %>
	
		<div class="jumbotron">
    	<fieldset>
      	<legend class="text-center"> Contact Us </legend> 			
		
		  <div class="form-group">
		  	<%=label_tag(:name, "Name",:class =>"col-lg-2 control-label")%>
		  	<div class="col-lg-10">
		  		<%= text_field_tag( :name, nil, :class =>"input form-control" )%>
		  	</div>
		  </div>
		  <div class="form-group"><%= label_tag( :company, "Company", :class=> "col-lg-2 control-label" )%>
		  	<div class="col-lg-10">
		  	<%= text_field_tag( :company, nil, :class=> "input form-control" )%>
		  	</div>
		  </div>

		  <div class="form-group"><%= label_tag( :email, "Email", :class=> "col-lg-2 control-label" )%>
		  	<div class="col-lg-10">
		  		<%= email_field_tag( :email, nil, :class=> "input form-control" )%>
		  	</div>
		  </div>

		  <div class="form-group">
		  	<%= label_tag( :select, "Request", :class=> "col-lg-2 control-label")%>
		  	<div class="col-lg-10">
		  		<%= select_tag( :select, options_for_select(["Individual User with a Question","Sales / Demo", "Research Request", "Partnership Interest", "Career Opportunities", "Other" ]), :include_blank => 'true', :class=>"input form-control" )%>	
		  	</div>
		  </div>

		  <div class="form-group">
		  	<%= label_tag( :comments, "Comments",  :class=> "col-lg-2 control-label" )%>
		  	<div class="col-lg-10">
		  		<%= text_area_tag( :textArea, nil, :rows => "3", :class=> "input form-control" )%>
		  	</div>
		  </div>

			<div class="form-group">
				<div class="col-lg-10 col-lg-offset-2">
					<%= submit_tag "Send", class: 'btn btn-small btn-success' %>
				</div>
			</div>
		<% end %>
		</fieldset>
	</div>
	</form>
</div>


