
<div class="container">
	<form class="form-horizontal " role="form">
		<div class="jumbotron devise">
    	<fieldset>
      	<legend class="text-center"> Sign In </legend>  
			
		  <div class="form-group"><%= f.label :login, :class => 'col-lg-2 control-label' %>
		  	<div class="col-lg-10">
		  		<%= f.email_field :login, :autofocus => true, :class =>'input form-control', :placeholder => 'Enter email or username'%>
		  	</div>
		  </div>

		  <div class="form-group"><%= f.label :password, :class => 'col-lg-2 control-label' %>
		  	<div class="col-lg-10">
		  		<%= f.password_field :password, :class =>'input form-control', :placeholder => 'Password' %>

			  	<% if devise_mapping.rememberable? -%>
			    <div class="checkbox"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
			    <% end %>
			</div>
		  </div>
		 
		  <div class="form-group">
      		<div class="col-lg-10 col-lg-offset-2">
				<%= f.submit "Sign in", :class => 'btn btn-small btn-info' %>
				<div class="links"><%= render "devise/shared/links" %></div>
			</div>
		</div>
		</fieldset>

		</div>
		

		
	</form>
</div>