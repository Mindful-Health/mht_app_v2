<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="container">
	<div class ="jumbotron">
		<h2 class="text-center">Sign in</h2>
		<form role="form">
			
		  <div class="form-group"><%= f.label :login %><br />
		  <%= f.email_field :login, :autofocus => true, :class =>'input', :placeholder => 'Enter email or username'%></div>

		  <div class="form-group"><%= f.label :password %><br />
		  <%= f.password_field :password, :class =>'input' %></div>

		  <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in", :class => 'btn btn-small btn-primary' %></div>
		<% end %>

			<div class="links"><%= render "devise/shared/links" %></div>
		</form>
	</div>
</div>