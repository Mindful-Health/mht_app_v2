<div class="row"><%= devise_error_messages! %></div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<div class="container">
	
	<form class="form-horizontal " role="form">
		<div class="jumbotron devise">
    	<fieldset>
      	<legend class="text-center"> Sign Up </legend> 			
			
		  <div class="form-group"><%= f.label :username, :class => 'col-lg-2 control-label' %>
		  	<div class="col-lg-10">
		  	<%= f.text_field :username, :autofocus => true, :class =>'input form-control' %>
		  	</div>
		  </div>

		  <div class="form-group"><%= f.label :email, :class => 'col-lg-2 control-label' %>
		  	<div class="col-lg-10">
		  		<%= f.email_field :email, :autofocus => true, :class =>'input form-control' %>
		  	</div>
		  </div>

		  <div class="form-group"><%= f.label :password, :class => 'col-lg-2 control-label' %>
		  	<div class="col-lg-10">
		  		<%= f.password_field :password, :class =>'input form-control' %>
		  	</div>
		  </div>

		  <div class="form-group"><%= f.label :password_confirmation, :class => 'col-lg-2 control-label' %>
		  	<div class="col-lg-10">
		  		<%= f.password_field :password_confirmation, :class =>'input form-control' %>
		  	</div>
		  </div>

		<div class="form-group">
			<div class="col-lg-10 col-lg-offset-2">
				<%= f.submit "Sign up", :class => 'btn btn-small btn-primary' %>
				<div class = "links"><%= render "devise/shared/links" %></div>
			</div>
		</div>
		<% end %>

	<fieldset>
	</div>		
  </form>
</div>
