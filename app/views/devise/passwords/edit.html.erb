<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

<div class="container">
	<div class ="jumbotron">
		<h2 class="text-center">Change your password</h2>
		<form role="form">	
		  <div class="form-group"><%= f.label :password, "New password" %><br />
		  <%= f.password_field :password, :autofocus => true,  :class =>'input' %></div>

		  <div class="form-group"><%= f.label :password_confirmation, "Confirm new password" %><br />
		  <%= f.password_field :password_confirmation,  :class =>'input' %></div>

		  <div><%= f.submit "Change my password", :class => 'btn btn-small btn-primary' %></div>
		<% end %>

		<div class="links"><%= render "devise/shared/links" %></div>
		</form>
	</div>
</div>


